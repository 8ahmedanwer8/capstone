<launch>
  <arg name="frame_id" default="base_link"/>

  <arg name="rgb_topic" default="/camera/color/image_raw"/>
  <arg name="depth_topic" default="/camera/aligned_depth_to_color/image_raw"/>
  <arg name="camera_info_topic" default="/camera/color/camera_info"/>

  <node pkg="rtabmap_ros" type="rgbd_odometry" name="rgbd_odometry" output="screen">
    <param name="frame_id" value="$(arg frame_id)"/>
    <param name="odom_frame_id" value="odom"/>
    <param name="publish_tf" value="true"/>

    <param name="subscribe_rgbd" value="false"/>
    <param name="approx_sync" value="true"/>

    <remap from="rgb/image" to="$(arg rgb_topic)"/>
    <remap from="depth/image" to="$(arg depth_topic)"/>
    <remap from="rgb/camera_info" to="$(arg camera_info_topic)"/>

    <param name="rgb/image_transport" value="compressed"/>
    <param name="depth/image_transport" value="compressedDepth"/>

    <param name="queue_size" value="50"/>
    <param name="sync_queue_size" value="50"/>
  </node>

  <node pkg="rtabmap_ros" type="rtabmap" name="rtabmap" output="screen" args="--delete_db_on_start">
    <param name="frame_id" value="$(arg frame_id)"/>
    <param name="map_frame_id" value="map"/>
    <param name="odom_frame_id" value="odom"/>

    <param name="subscribe_depth" value="true"/>
    <param name="subscribe_rgb" value="true"/>
    <param name="approx_sync" value="true"/>

    <remap from="odom" to="/rgbd_odometry/odom"/>
    <remap from="rgb/image" to="$(arg rgb_topic)"/>
    <remap from="depth/image" to="$(arg depth_topic)"/>
    <remap from="rgb/camera_info" to="$(arg camera_info_topic)"/>

    <param name="rgb/image_transport" value="compressed"/>
    <param name="depth/image_transport" value="compressedDepth"/>

    <param name="queue_size" value="50"/>
    <param name="sync_queue_size" value="50"/>

    <param name="RGBD/NeighborLinkRefining" value="true"/>
    <param name="RGBD/ProximityBySpace" value="true"/>
    <param name="Reg/Force3DoF" value="true"/>
  </node>
</launch>
